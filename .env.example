# ==============================================================================
# Thermoculture Research Assistant - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in the values for your environment.
# Do NOT commit the .env file to version control.
# ==============================================================================

# ------------------------------------------------------------------------------
# Database
# ------------------------------------------------------------------------------
# PostgreSQL connection string using asyncpg driver.
# Format: postgresql+asyncpg://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/thermoculture

# PostgreSQL credentials used by the db service in docker-compose.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=thermoculture

# ------------------------------------------------------------------------------
# Redis
# ------------------------------------------------------------------------------
# Redis connection URL used for Celery broker and caching.
# Format: redis://<host>:<port>/<db-number>
REDIS_URL=redis://redis:6379/0

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------
# Secret key for signing JWTs and other cryptographic operations.
# IMPORTANT: Generate a strong random key for production use.
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=change-this-to-a-random-secret-key

# ------------------------------------------------------------------------------
# Reddit API (optional - for data collection)
# ------------------------------------------------------------------------------
# Create a Reddit application at https://www.reddit.com/prefs/apps
# to obtain client ID and secret.
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=thermoculture-research-assistant/1.0

# ------------------------------------------------------------------------------
# API
# ------------------------------------------------------------------------------
# Prefix for all API v1 routes.
API_V1_PREFIX=/api/v1

# Allowed CORS origins as a JSON array of strings.
# Add your frontend URL(s) here.
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ------------------------------------------------------------------------------
# Guardian API (for news data collection)
# ------------------------------------------------------------------------------
# Obtain a free API key at https://open-platform.theguardian.com/access/
GUARDIAN_API_KEY=
